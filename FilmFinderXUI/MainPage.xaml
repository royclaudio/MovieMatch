                <Button ToolTipProperties.Text="Not seen and Not interested" Text="Interested"  BorderColor="#000000" BorderWidth="2" FontAttributes="Bold,Italic" Margin="5,5,5,0" BackgroundColor="#8BD6F2" TextColor="#000000"  />

            </VerticalStackLayout>
        </Border>-->


    </StackLayout>



</ContentPage>